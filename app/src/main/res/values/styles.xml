<resources>
  <!-- Base application theme. -->
  <style name="style_11_normal">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">11sp</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="style_11_medium" parent="style_11_normal">
    <item name="android:fontFamily">sans-serif-medium</item>
  </style>

  <style name="style_12_normal">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="style_14_normal" parent="style_11_normal">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="style_14_medium" parent="style_14_normal">
    <item name="android:fontFamily">sans-serif-medium</item>
  </style>

  <style name="style_16_normal" parent="style_11_normal">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="style_16_medium" parent="style_16_normal">
    <item name="android:fontFamily">sans-serif-medium</item>
  </style>

  <style name="style_et_17_medium" parent="style_11_normal">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textSize">17sp</item>
    <item name="android:maxLines">1</item>
    <item name="android:padding">7sp</item>
    <item name="android:inputType">text</item>
    <item name="android:textCursorDrawable">@drawable/input_field_cursor</item>
    <item name="android:background">@android:color/transparent</item>
  </style>
</resources>